<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="container myBody">

    <script type="text/javascript" src="~/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/twitter-bootstrap/js/bootstrap.js"></script>

    <div class="container" id="header" style="background-color: deepskyblue; height: 10%">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <ul class="nav navbar-nav mr-auto">
                    <li>
                        <div>
                            <a class="btn" asp-action="Index" asp-controller="Home">Home</a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Authentication</a>
                        <div class="nav-item dropdown">
                            <div class="nav-item dropdown dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-action="Login" asp-controller="Entrance">Log in</a>
                                <a class="dropdown-item" asp-action="Registration" asp-controller="Entrance">Sign up</a>
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li>
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </li>
                </ul>

            </nav>
        </div>
    </div>
    <div class="container" style="background-color: white; height: 80%" id="main">
        @RenderBody()
    </div>
    <div class="container" id="footer" style="background-color: deepskyblue; height: 10%">
        <div>
            <p><h2>It's FOOTER. You GUEST.</h2></p>
        </div>
    </div>
    @*@RenderSection("Scripts", required: false)*@
</body>
</html>