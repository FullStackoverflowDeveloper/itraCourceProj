<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/DragAndDrop.css" rel="stylesheet" />
</head>
<body class="container myBody">

    <script type="text/javascript" src="~/jquery/jquery.js"></script>
    <script type="text/javascript" src="~/twitter-bootstrap/js/bootstrap.js"></script>

    <div class="container" style="background-color: deepskyblue;height: 10%">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <ul class="nav navbar-nav mr-auto">
                    <li>
                        <div>
                            <a class="btn" asp-action="Index" asp-controller="Home">Home</a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">manage panel<span class="sr-only">(current)</span></a>
                        <div class="nav-item dropdown">
                            <div class="nav-item dropdown dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-action="Index" asp-controller="Roles">Roles</a>
                                <a class="dropdown-item" asp-action="UsersManager" asp-controller="Admin">Users</a>
                                <a class="dropdown-item" asp-action="Logout" asp-controller="Entrance">Log out</a>
                            </div>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">collections<span class="sr-only">(current)</span></a>
                        <div class="nav-item dropdown">
                            <div class="nav-item dropdown dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-action="AllCollections" asp-controller="Collection">all collections</a>
                                <a class="dropdown-item" asp-action="MyCollections" asp-controller="Collection">my collections</a>
                                <a class="dropdown-item" asp-action="Create" asp-controller="Collection">create collection</a>
                            </div>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li>
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="container" style="background-color: white; height: 80%">
        @RenderBody()
    </div>

    <div class="container" style="background-color: deepskyblue;height: 10%">
        <div>
            <p><h2>It's FOOTER. You ADMIN.</h2></p>
        </div>
    </div>
</body>
</html>