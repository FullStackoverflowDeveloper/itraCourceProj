@model IEnumerable<AppFour.Models.Collection.Collection>

<h4 class="text-black text-center">My Collections</h4>
<br />
<br />
@using (Html.BeginForm("CollectionsManager", "Collection", FormMethod.Post))
{
    <div class="container">
        <div class="row align-items-center" align="center">
            <div class="col">
                <input type="submit" value="Delete selected" class="btn btn-sm btn-warning" name="button" />
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        <table class="table table-sm table-bordered">
            <tr>
                <th>
                    <div class="form-check">
                        <input type="checkbox" id="checkAll" class="cb-element" />
                    </div>
                </th>
                <th>Image</th>
                <th>Title</th>
                <th>Description</th>
                <th>Topic</th>
                <th>Edit</th>
            </tr>
            @foreach (AppFour.Models.Collection.Collection clln in Model)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" name="idsArr" value="@clln.Id" class="cb-element" />
                        </div>
                    </td>
                    <td><img src="@clln.ImgUrl" width="50" height="50" asp-append-version="true" /></td>
                    <td><a asp-action="GetCollectionItems" asp-controller="Item" asp-route-collectionID="@clln.Id">@clln.Title</a></td>
                    <td>@Html.Raw(@clln.Description)</td>
                    <td>@clln.Topic</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Update" asp-controller="Collection" asp-route-collectionID="@clln.Id">Update</a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
<script src="~/jquery/jquery.js"></script>
<script src="~/js/Checkbox.js"></script>