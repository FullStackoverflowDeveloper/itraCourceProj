@model AppFour.Models.Item.ItemAction;
@{
    ViewData["Title"] = "Items";
}

<div class="container">
    <h3 class="text-black text-center">Create collection</h3>
    <div class="text-danger" asp-validation-summary="All"></div>

    <form method="post" asp-action="Create1" asp-controller="Item" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Title">Name:</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group" hidden>
            <input type="hidden" asp-for="CollectionId" />
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>