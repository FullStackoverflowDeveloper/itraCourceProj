@model AppFour.Models.Item.ItemAction
@{
    ViewData["Title"] = "Items";
}

<nav class="navbar navbar-light bg-light">
    <form class="form-inline">
        <div>
            <a asp-action="Create" asp-controller="Item" class="btn btn-sm btn-outline-secondary" type="button" asp-route-collectionID="@Model.CollectionID">Create item</a>
        </div>
    </form>
</nav>
<br />
<h3 class="text-black text-center">Items</h3>

@using (Html.BeginForm("ItemsManager", "Item", FormMethod.Post))
{
    <br />

    <div class="container">
        <div class="row align-items-center" align="center">
            <div class="col">
                <input type="submit" value="Delete selected" class="btn btn-sm btn-warning" name="button" />
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        <table class="table table-sm table-bordered">
            <tr>
                <th>
                    <div class="form-check">
                        <input type="checkbox" id="checkAll" class="cb-element" />
                    </div>
                </th>
                <th>Title</th>
                <th>Edit</th>
            </tr>
            @foreach (AppFour.Models.Item.Item itm in Model.items)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" name="idsArr" value="@itm.Id" class="cb-element" />
                        </div>
                    </td>
                    <td>@itm.Title</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Update" asp-controller="Item" asp-route-itemID="@itm.Id">Update</a>
                    </td>
                </tr>
            }
        </table>

        <input type="hidden" asp-for="@Model.CollectionID" name="collectionID" />
    </div>
}

<script src="~/jquery/jquery.js"></script>
<script src="~/js/Checkbox.js"></script>