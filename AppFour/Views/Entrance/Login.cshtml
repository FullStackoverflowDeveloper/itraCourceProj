@model AppFour.Models.Entrance.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <h4 class="text-black text-center">Login</h4>
    <div class="text-danger" asp-validation-summary="All"></div>

    <form method="post" asp-action="Login" asp-controller="Entrance"
          asp-route-returnUrl="@Model.ReturnUrl">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe" />
        </div>
        <input type="submit" class="btn text-black" style="background-color: #b3b3ff" value="Apply" />
    </form>

    @*<fb:login-button scope="public_profile,email"
                     onlogin="checkLoginState();">
    </fb:login-button>

    <div id="authstatus"></div>*@
</div>

