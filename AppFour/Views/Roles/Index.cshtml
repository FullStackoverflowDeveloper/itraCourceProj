@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Roles";
}

<h4 class="text-black text-center">All Roles</h4>
<br />

@using (Html.BeginForm("RolesManager", "Roles", FormMethod.Post))
{
    <br />

    <div class="container">
        <div class="row align-items-center" align="center">
            <div class="col">
                <input type="submit" value="Create role" class="btn btn-sm btn-success" name="button" />
            </div>
            <div class="col">
                <input type="submit" value="Delete selected" class="btn btn-sm btn-warning" name="button" />
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        <table class="table table-sm table-bordered">
            <tr>
                <th>
                    <div class="form-check">
                        <input type="checkbox" id="checkAll" class="cb-element" />
                    </div>
                </th>
                <th>Name</th>
                <th>Update</th>
            </tr>
            @foreach (IdentityRole role in Model)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" name="idsArr" value="@role.Id" class="cb-element" />
                        </div>
                    </td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-primary" asp-action="Edit1" asp-controller="Roles" asp-route-roleId="@role.Id">Acccess settings</a></td>
                </tr>
            }
        </table>
    </div>
}

<script src="~/jquery/jquery.js"></script>
<script src="~/js/Checkbox.js"></script>